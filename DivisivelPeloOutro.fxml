<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="400.0" prefWidth="500.0"
           style="-fx-background-color: #1E1E1E;"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Divisivel.DivisivelController">

    <VBox alignment="CENTER" spacing="10"
          prefWidth="300.0" prefHeight="200.0"
          style="-fx-background-color: #252525; -fx-padding: 20;
                 -fx-border-radius: 10px; -fx-background-radius: 10px;">

        <TextField fx:id="num1Field" alignment="CENTER"
                   promptText="Digite o primeiro número"
                   prefWidth="200.0"
                   style="-fx-background-color: #2D2D2D; -fx-text-fill: #EAEAEA;
                          -fx-border-color: #3A3A3A; -fx-border-radius: 5px;
                          -fx-background-radius: 5px;" />

        <TextField fx:id="num2Field" alignment="CENTER"
                   promptText="Digite o segundo número"
                   prefWidth="200.0"
                   style="-fx-background-color: #2D2D2D; -fx-text-fill: #EAEAEA;
                          -fx-border-color: #3A3A3A; -fx-border-radius: 5px;
                          -fx-background-radius: 5px;" />

        <Button onAction="#verificarDivisibilidade"
                text="Verificar"
                prefWidth="150.0"
                style="-fx-background-color: #2D2D2D; -fx-text-fill: #EAEAEA;
                       -fx-border-color: #3A3A3A; -fx-border-radius: 5px;
                       -fx-background-radius: 5px;" />

        <Label fx:id="resultadoLabel" alignment="CENTER"
               text="Resultado aparecerá aqui"
               wrapText="true"
               prefWidth="250.0"
               prefHeight="50.0"
               style="-fx-text-fill: #EAEAEA; -fx-font-size: 14px;" />

    </VBox>

</StackPane>